      js: ['timeline.min.js', 'linea_tiempo_vertical.js']
    }
  },
  
  // Listas
  'lista-desplegable': {
    css: 'css/recursos/lista_desplegable/css/',
    js: null,
    files: {
      css: ['estilos-lista_desplegable.css', 'listaAnimacion.css'],
      js: []
    }
  },
  
  // Notas
  'nota-cinta': {
    css: 'css/recursos/nota_cinta/css/',
    js: null,
    files: {
      css: ['estilos-nota-cinta.css'],
