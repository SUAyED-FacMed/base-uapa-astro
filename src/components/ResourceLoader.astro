      css: ['estilos-carrusel.css'],
      js: ['carrusel.js']
    }
  },
  
  // Ficheros
  'fichero-horizontal': {
    css: 'css/recursos/fichero_horizontal/css/',
    js: 'css/recursos/fichero_horizontal/js/',
    files: {
      css: ['estilos-fichero-hor.css'],
      js: ['fichero-hor.js']
    },
    init: `
      ficheroHorizontal("fichero-hor-1");
