---
export interface Props {
  videoId: string;
  title?: string;
  width?: string;
  autoplay?: boolean;
  nocookie?: boolean;
  className?: string;
  posterquality?: 'default' | 'mqdefault' | 'hqdefault' | 'sddefault' | 'maxresdefault';
}

const { 
  videoId,
  title = "YouTube video player",
  width = "col-lg-10",
  autoplay = false,
  nocookie = true,
  className = "",
  posterquality = "hqdefault"
} = Astro.props;
---

<!-- Importar el Web Component -->
<script>
  import '@justinribeiro/lite-youtube';
</script>

<div class="row">
  <div class={`${width} mx-auto ${className}`.trim()}>
    <div class="ratio ratio-16x9">
      <lite-youtube
        videoid={videoId}
        videotitle={title}
        autoplay={autoplay}
        nocookie={nocookie}
        posterquality={posterquality}
        style="width: 100%; height: 100%;">
      </lite-youtube>
    </div>
  </div>
</div>

<style>
  /* Estilos para asegurar que el componente se vea bien dentro del ratio de Bootstrap */
  lite-youtube {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 0.375rem; /* Bootstrap border-radius */
  }
  
  /* Personalización opcional del botón de play */
  lite-youtube::part(playButton) {
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 50%;
  }
</style>