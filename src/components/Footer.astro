          <!-- Button trigger modal -->
          <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#creditos">
            Créditos
          </button>

          <!-- Modal -->
          <div class="modal fade" id="creditos" tabindex="-1" aria-labelledby="creditosLabel" aria-hidden="true">
