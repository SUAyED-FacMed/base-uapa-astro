                </div>
                <div class="modal-body">
                  <ul class="container-fluid">
                    {credits.map((credit) => (
                      <li class="row">
                        <div class="col-xs-12 col-sm-12 col-lg-6">
                          <p class="mb-0">{credit.role}</p>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-lg-6">
